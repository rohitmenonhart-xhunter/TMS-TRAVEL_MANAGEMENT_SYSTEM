# n8n Environment Variables
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=localhost
N8N_PATH=/
N8N_EDITOR_BASE_URL=http://localhost:5678

# Workflow Configuration
PROJECT_NAME=TripPlanningAutomation
ENVIRONMENT=development  # development, testing, production

# API Keys and Authentication
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
SENDGRID_API_KEY=your_sendgrid_api_key
OPENAI_API_KEY=your_openai_api_key

# Google Sheets Integration
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_SHEET_ID=your_google_sheet_id
CUSTOMER_SHEET_NAME=CustomerContacts
TIMELINE_SHEET_NAME=CustomerTimeline
ANALYTICS_SHEET_NAME=CampaignAnalytics

# Email Configuration
SENDER_EMAIL=noreply@yourcompany.com
SENDER_NAME=Travel Planner
EMAIL_BATCH_SIZE=100
EMAIL_BATCH_INTERVAL=5  # seconds
MAX_EMAILS_PER_DAY=5000

# WhatsApp Configuration
WHATSAPP_TEMPLATE_NAMESPACE=your_whatsapp_template_namespace
WHATSAPP_TEMPLATE_NAME=your_whatsapp_template_name
WHATSAPP_BATCH_SIZE=50
WHATSAPP_BATCH_INTERVAL=10  # seconds
MAX_WHATSAPP_PER_DAY=1000

# Document Storage
DOCUMENT_PATH=/path/to/documents
BROCHURE_FILENAME=travel_brochure.pdf
ITINERARY_FILENAME=sample_itinerary.pdf
PRICING_FILENAME=pricing_details.pdf
FAQ_FILENAME=faq.pdf
TERMS_FILENAME=terms_conditions.pdf

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-n8n-instance.com
RESPONSE_WEBHOOK_PATH=/incoming-responses
TRACKING_WEBHOOK_PATH=/tracking-events

# Workflow IDs
EMAIL_CAMPAIGN_WORKFLOW_ID=email_campaign_workflow_id
WHATSAPP_CAMPAIGN_WORKFLOW_ID=whatsapp_campaign_workflow_id
DOCUMENT_DELIVERY_WORKFLOW_ID=document_delivery_workflow_id
USER_REMOVAL_WORKFLOW_ID=user_removal_workflow_id
FOLLOWUP_WORKFLOW_ID=followup_workflow_id
AGENTIC_CHAT_WORKFLOW_ID=agentic_chat_workflow_id

# Notifications and Monitoring
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
NOTIFICATION_CHANNEL=notifications
ERROR_NOTIFICATION_EMAIL=errors@yourcompany.com
CRITICAL_ERROR_SMS=+1234567890

# AI and NLP Configuration
OPENAI_MODEL=gpt-4
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
HUMAN_HANDOFF_THRESHOLD=0.6
MAX_TOKENS=800
AI_TEMPERATURE=0.7

# Testing Configuration
TEST_MODE=false
TEST_RECIPIENT_EMAIL=test@yourcompany.com
TEST_RECIPIENT_PHONE=+1234567890
SAMPLE_SIZE=50

# Performance Configuration
CACHE_EXPIRATION=3600  # seconds
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000  # milliseconds
RETRY_ATTEMPTS=3
RETRY_DELAY=5000  # milliseconds 